### Rofi

# Launch apps
super + d
	rofi -show run

### System stuff

# Reload, Exit -> mess with this
super + {Escape,r}
	bspc {quit,wm -r}

# Volume Control
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%

# make sxhkd reload its configuration files:
super + shift + r
        pkill -USR1 -x sxhkd

# make sxhkd reload it's configuration files
super + shift + r
	pkill -USR1 -x sxhkd

# shutdown
super + Meta_L
	shutdown now

# reboot
super + shift + Meta_L

# get window's class name
super + alt + c
    notify-send "$(xprop | grep 'CLASS')"

### BSPWM things

# Close window, included because of the meme
alt + F4
	bspc node --close

# Close window
super + q
	bspc node --close

# Toggle Float
super + Tab
	bspc query --nodes -n focused.tiled && state=floating || state=tiled; \
	bspc node --state \~$state

# Fullscreen
super + f
	bspc node --state \~fullscreen

### Screenshots

# Region
super + shift + s
	maim -s | xclip -selection clipboard -t image/png

# Window
super + shift + Print
	maim -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%s).jpg

# All
super + Print
	maim ~/Pictures/Screenshots/$(date +%s).jpg

