# Terminal
super + Return
	kitty

# Floating Terminal
super + shift + Return
	/home/sylkos/dotfiles/configs/sxhkd/scripts/floating_terminal.sh

# Launch apps
super + d
	rofi -show run

# Reload, Exit
super + {Escape,r}
	bspc {quit,wm -r}

# Close window, included because of the meme
alt + F4
	bspc node --close

# Close window
super + q
	bspc node --close

# Toggle Float
super + space
	bspc query --nodes -n focused.tiled && state=floating || state=tiled; \
	bspc node --state \~$state

# Fullscreen
super + f
	bspc node --state \~fullscreen

# Focus/swap windows by direction
super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

# Focus selected desktop
super + {1-9,0}
	bspc desktop --focus ^{1-9,10}

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd

# Move window to selected desktop
super + shift + {1-9,0}
	bspc node --to-desktop ^{1-9,10} --focus

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%

# Hack fix for minecraft 1.12
super + o
	xrandr --output DVI-D-0 --mode 1920x1200

super + shift + s
	maim -s | xclip -selection clipboard -t image/png

# expand a window by moving one of its side outward
ctrl + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
ctrl + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

